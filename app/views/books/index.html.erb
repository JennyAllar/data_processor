
<h1>Welcome to the Data Processor!</h1>

<%= button_to "Click Here", book_fetch_xlsx_data_path %>

<br><br><br>
<div class="caption">Inventory</div>
<div id="table">
  <div class="header-row row">
    <span class="cell primary"><%= link_to "Title", :sort => "title" %></span>
    <span class="cell"><%= link_to "Author", :sort => "author" %></span>
    <span class="cell"><%= link_to "Description", :sort => "description" %></span>
    <span class="cell"><%= link_to "Edition", :sort => "edition" %></span>
    <span class="cell"><%= link_to "Year", :sort => "year" %></span>
    <span class="cell"><%= sortable "price", "Price" %></span>
  </div>
  <% @books.each do |book| %>

    <div class="row">
      <input type="radio" name="expand">
    <span class="cell primary" data-label="Title"><%= book.title %>
</span>
      <span class="cell" data-label="Author"><%= book.author %></span>
      <span class="cell" data-label="Description"><%= book.description %></span>
      <span class="cell" data-label="Edition"><%= book.edition %></span>
      <span class="cell" data-label="Year"><%= book.year %></span>
      <span class="cell" data-label="Price"><%= book.price %></span>

    </div>
  <% end %>

</div>






